<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/dialog_inner"
        android:layout_width="@dimen/time_fin_dialog_width"
        android:layout_height="@dimen/lang_dialog_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lang_dialog_header_height"
            android:layout_alignParentTop="true">




            <TextView
                android:id="@+id/lang_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dialog_side_paddings"
                android:paddingRight="@dimen/dialog_side_paddings"
                android:textSize="@dimen/lang_item_text_size"
                android:gravity="center_horizontal|center_vertical"
                android:textStyle="bold"/>

        </RelativeLayout>





        <ScrollView
            android:id="@+id/scroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/lang_dialog_header_height"
            android:layout_below="@+id/header">


            <LinearLayout
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/es"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lang_item_height"
                    android:clickable="true"
                    android:soundEffectsEnabled="false">

                    <TextView
                        android:id="@+id/en_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/lang_item_text_left_margin"
                        android:text="EspaÃ±ol"
                        android:textSize="@dimen/lang_item_text_size" />

                    <RelativeLayout
                        android:layout_width="@dimen/lang_item_checkbox_size"
                        android:layout_height="@dimen/lang_item_checkbox_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/lang_item_text_left_margin">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:visibility="invisible" />

                    </RelativeLayout>

                </RelativeLayout>




            </LinearLayout>


        </ScrollView>




    </RelativeLayout>
</RelativeLayout>